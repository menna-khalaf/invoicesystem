@model WebApplication4.Models.Vendor

@{
    ViewData["Title"] = "حذف مورد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #3498db;
            --secondary-color: #2c3e50;
            --danger-color: #e74c3c;
            --light-bg: #f8f9fa;
            --dark-text: #2c3e50;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Tajawal', sans-serif;
            background-color: #f5f7fa;
            color: var(--dark-text);
            line-height: 1.6;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .header {
            background: linear-gradient(135deg, var(--danger-color), #c0392b);
            color: white;
            box-shadow: var(--shadow);
            padding: 1.5rem 0;
            margin-bottom: 2rem;
        }

        .page-title {
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            font-size: 1.5rem;
        }

        .container-narrow {
            max-width: 800px;
            width: 100%;
            padding: 0 15px;
            margin: 0 auto;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: var(--shadow);
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .card-header {
            background-color: var(--danger-color);
            color: white;
            font-weight: bold;
            padding: 1rem;
        }

        .card-body {
            padding: 1.5rem;
        }

        .detail-row {
            display: flex;
            padding: 0.75rem 0;
            border-bottom: 1px solid #eee;
            align-items: center;
        }

        .detail-label {
            flex: 0 0 40%;
            font-weight: 600;
            color: var(--secondary-color);
            font-size: 0.9rem;
        }

        .detail-value {
            flex: 1;
            padding-right: 1rem;
            font-size: 0.9rem;
        }

        .badge-taxable {
            background-color: #2ecc71;
            color: white;
            padding: 0.3rem 0.5rem;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .badge-non-taxable {
            background-color: #e74c3c;
            color: white;
            padding: 0.3rem 0.5rem;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .warning-message {
            background-color: #fff3cd;
            color: #856404;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            border-right: 4px solid #ffeeba;
            font-size: 0.9rem;
        }

        .btn-delete {
            background-color: var(--danger-color);
            color: white;
            border: none;
            padding: 0.6rem 1.25rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 0.5rem;
        }

        .btn-back {
            background-color: var(--light-bg);
            color: var(--secondary-color);
            border: 1px solid #ddd;
            padding: 0.6rem 1.25rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
            text-align: center;
            margin-top: 0.5rem;
        }

            .btn-back:hover {
                background-color: var(--secondary-color);
                color: white;
                text-decoration: none;
            }

        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        @@media (max-width: 768px) {
            .container-narrow {
                max-width: 95%;
            }

            .detail-row {
                flex-direction: column;
                align-items: flex-start;
            }

            .detail-label {
                flex: 1;
                margin-bottom: 0.25rem;
            }

            .detail-value {
                padding-right: 0;
            }

            .action-buttons {
                flex-direction: column;
                gap: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="header text-center">
        <div class="container-narrow">
            <h1 class="page-title mb-2"><i class="fas fa-trash-alt me-2"></i>حذف مورد</h1>
        </div>
    </div>

    <div class="container-narrow">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>تأكيد الحذف</h5>
            </div>
            <div class="card-body">
                <div class="warning-message">
                    <h6 class="mb-1"><i class="fas fa-exclamation-circle me-2"></i>تحذير!</h6>
                    <p class="mb-0">هل أنت متأكد من رغبتك في حذف هذا المورد؟ هذا الإجراء لا يمكن التراجع عنه.</p>
                </div>

                <!-- Vendor Details -->
                <div class="detail-row">
                    <div class="detail-label">اسم المورد</div>
                    <div class="detail-value">@Html.DisplayFor(model => model.VendorName)</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">الهاتف الأساسي</div>
                    <div class="detail-value">@Html.DisplayFor(model => model.PhoneNumber1)</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">البريد الإلكتروني</div>
                    <div class="detail-value">@Html.DisplayFor(model => model.Email)</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">حالة الضريبة</div>
                    <div class="detail-value">
                        @if (Model.TaxableCheck == true)
                        {
                            <span class="badge-taxable">مسجل ضريبياً</span>
                        }
                        else
                        {
                            <span class="badge-non-taxable">غير مسجل</span>
                        }
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">الموقع</div>
                    <div class="detail-value">@Html.DisplayFor(model => model.Location)</div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="VendorId" />
                    <div class="action-buttons">
                        <a asp-action="Index" class="btn btn-back">
                            <i class="fas fa-arrow-right me-1"></i> إلغاء
                        </a>
                        <button type="submit" class="btn btn-delete">
                            <i class="fas fa-trash-alt me-1"></i> تأكيد الحذف
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>