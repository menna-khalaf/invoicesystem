@model WebApplication4.Models.Branch

@{
    ViewData["Title"] = "تفاصيل الفرع";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #207cd4;
            --primary-light: #e6f2ff;
            --primary-dark: #1a6ab8;
            --success-color: #28a745;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --gray-color: #6c757d;
            --light-gray: #f8f9fa;
            --border-color: #e0e6ed;
        }

        body {
            font-family: 'Tajawal', sans-serif;
            background-color: #f5f7fa;
            direction: rtl;
        }

        .details-container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 0 15px;
        }

        .details-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .details-title {
            color: #2c3e50;
            font-weight: 700;
            margin: 0;
            font-size: 1.8rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .details-title i {
                color: var(--primary-color);
            }

        .btn-back {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
        }

            .btn-back:hover {
                background-color: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(32, 124, 212, 0.2);
            }

        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }

        .details-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            padding: 25px;
            border-top: 4px solid var(--primary-color);
        }

        .card-header {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px dashed var(--border-color);
        }

        .card-title {
            color: var(--primary-color);
            font-weight: 600;
            margin: 0;
            font-size: 1.2rem;
        }

        .card-icon {
            color: var(--primary-color);
            font-size: 1.3rem;
        }

        .details-table {
            width: 100%;
            border-collapse: collapse;
        }

            .details-table th {
                text-align: right;
                padding: 12px 15px;
                background-color: var(--light-gray);
                color: var(--primary-color);
                font-weight: 600;
                width: 30%;
                border-bottom: 1px solid var(--border-color);
            }

            .details-table td {
                padding: 12px 15px;
                color: #555;
                border-bottom: 1px solid var(--border-color);
            }

            .details-table tr:last-child th,
            .details-table tr:last-child td {
                border-bottom: none;
            }

        .status-badge {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .status-active {
            background-color: rgba(40, 167, 69, 0.1);
            color: var(--success-color);
        }

        .status-inactive {
            background-color: rgba(220, 53, 69, 0.1);
            color: var(--danger-color);
        }

        .empty-state {
            text-align: center;
            padding: 20px;
            color: var(--gray-color);
        }

            .empty-state i {
                font-size: 2rem;
                margin-bottom: 10px;
                color: var(--border-color);
            }

        @@media (max-width: 768px) {
            .details-grid {
                grid-template-columns: 1fr;
            }

            .details-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .btn-back {
                width: 100%;
                justify-content: center;
            }
        }

        @@media (max-width: 576px) {
            .details-table th,
            .details-table td {
                display: block;
                width: 100%;
                text-align: right;
            }

            .details-table th {
                background-color: transparent;
                padding-bottom: 5px;
                border-bottom: none;
            }

            .details-table td {
                padding-top: 0;
                padding-bottom: 15px;
                border-bottom: 1px solid var(--border-color);
            }

            .details-table tr:last-child td {
                border-bottom: none;
            }
        }
    </style>
</head>
<body>
    <div class="details-container">
        <div class="details-header">
            <h1 class="details-title">
                <i class="fas fa-building"></i> تفاصيل الفرع
            </h1>
            <a asp-action="Index" class="btn-back">
                <i class="fas fa-arrow-right"></i> العودة إلى القائمة
            </a>
        </div>

        <div class="details-grid">
            <!-- Branch Details Card -->
            <div class="details-card">
                <div class="card-header">
                    <i class="fas fa-info-circle card-icon"></i>
                    <h3 class="card-title">معلومات الفرع الأساسية</h3>
                </div>

                <table class="details-table">
                    <tbody>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.BranchName)</th>
                            <td>@Html.DisplayFor(model => model.BranchName)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.BranchStatus)</th>
                            <td>
                                <span class="status-badge @(Model.BranchStatus == "نشط" ? "status-active" : "status-inactive")">
                                    @Html.DisplayFor(model => model.BranchStatus)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.City)</th>
                            <td>@Html.DisplayFor(model => model.City)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Country)</th>
                            <td>@Html.DisplayFor(model => model.Country)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Location)</th>
                            <td>@Html.DisplayFor(model => model.Location)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CommercialRegister)</th>
                            <td>@Html.DisplayFor(model => model.CommercialRegister)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                            <td>@Html.DisplayFor(model => model.CreatedAt)</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Employee Details Card -->
            <div class="details-card">
                <div class="card-header">
                    <i class="fas fa-user-tie card-icon"></i>
                    <h3 class="card-title">الموظف المسؤول</h3>
                </div>

                @if (ViewBag.SelectedEmployee != null)
                {
                    <table class="details-table">
                        <tbody>
                            <tr>
                                <th>الاسم الكامل</th>
                                <td>@ViewBag.SelectedEmployee.FullName</td>
                            </tr>
                            <tr>
                                <th>الوظيفة</th>
                                <td>@ViewBag.SelectedEmployee.Position</td>
                            </tr>
                            <tr>
                                <th>البريد الإلكتروني</th>
                                <td>@ViewBag.SelectedEmployee.Email</td>
                            </tr>
                            <tr>
                                <th>رقم الهاتف</th>
                                <td>@ViewBag.SelectedEmployee.MobileNumber</td>
                            </tr>
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-user-slash"></i>
                        <p>لا يوجد موظف معين لهذا الفرع</p>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>