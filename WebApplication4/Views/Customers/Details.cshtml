@model WebApplication4.Models.Customer

@{
    ViewData["Title"] = "تفاصيل العميل";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4" style="max-width: 600px; margin: auto;">
        <h3 class="text-center text-primary"><i class="bi bi-person-circle"></i> تفاصيل العميل</h3>
        <hr />

        <dl class="row text-end">
            <dt class="col-sm-4 fw-bold">اسم العميل</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerName)</dd>

            <dt class="col-sm-4 fw-bold">رقم التواصل</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ContactInfo)</dd>

            <dt class="col-sm-4 fw-bold">تاريخ الإضافة</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.CustomerId" class="btn btn-warning fw-bold">
                <i class="bi bi-pencil-square"></i> تعديل
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary fw-bold">
                <i class="bi bi-arrow-left"></i> العودة للقائمة
            </a>
        </div>
    </div>
</div>
