@model WebApplication4.Models.Customer

@{
    ViewData["Title"] = "حذف العميل";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4" style="max-width: 500px; margin: auto;">
        <h3 class="text-center text-danger"><i class="bi bi-trash3"></i> حذف العميل</h3>
        <hr />

        <h5 class="text-center text-warning">هل أنت متأكد أنك تريد حذف هذا العميل؟</h5>
        <dl class="row text-end">
            <dt class="col-sm-4 fw-bold">اسم العميل</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerName)</dd>

            <dt class="col-sm-4 fw-bold">رقم التواصل</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ContactInfo)</dd>

            <dt class="col-sm-4 fw-bold">تاريخ الإضافة</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>
        </dl>

        <form asp-action="Delete" id="deleteForm">
            <input type="hidden" asp-for="CustomerId" />

            <div class="d-grid">
                <button type="button" class="btn btn-danger fw-bold" id="deleteBtn">
                    <i class="bi bi-x-circle"></i> حذف
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> العودة للقائمة
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("deleteBtn").addEventListener("click", function () {
            if (confirm("هل أنت متأكد أنك تريد حذف هذا العميل؟ لا يمكن التراجع عن هذا الإجراء!")) {
                document.getElementById("deleteForm").submit();
            }
        });
    </script>
}
