@model PosSession
@{
    ViewData["Title"] = "تقرير الشيفت";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <style>
        body {
            padding: 20px;
            background-color: #f8f9fa;
        }

        .report-header {
            background-color: #343a40;
            color: white;
            padding: 15px;
            border-radius: 5px 5px 0 0;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="report-header">
            <h3>تقرير الشيفت - @Model.PosNavigation?.Posname</h3>
            <p>الجلسة رقم: @Model.SessionId | التاريخ: @DateTime.Now.ToString("yyyy/MM/dd")</p>
        </div>

        <div id="report-content">
            @await Html.PartialAsync("_ShiftReportPartial", Model.Invoices.ToList())
        </div>

        <div class="text-center mt-3">
            <button onclick="window.print()" class="btn btn-primary">طباعة التقرير</button>
            <button onclick="window.close()" class="btn btn-secondary">إغلاق</button>
        </div>
    </div>
</body>
</html>