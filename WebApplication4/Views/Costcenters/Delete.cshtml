@model WebApplication4.Models.Costcenter

@{
    ViewData["Title"] = "حذف مركز التكلفة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --danger-color: #e63946;
            --danger-dark: #d90429;
            --secondary-color: #3a0ca3;
            --light-bg: #f8f9fa;
            --dark-text: #212529;
        }
        
        body {
            font-family: 'Tajawal', sans-serif;
            background: linear-gradient(135deg, #fff5f5 0%, #ffebee 100%);
            min-height: 100vh;
        }
        
        .delete-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.3);
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        .delete-header {
            background: linear-gradient(to right, var(--danger-color), var(--danger-dark));
            color: white;
            padding: 1.5rem;
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .delete-title {
            font-weight: 700;
            margin: 0;
            font-size: 1.8rem;
        }
        
        .warning-message {
            background-color: #fff3f3;
            border-right: 4px solid var(--danger-color);
            padding: 1.5rem;
            margin-bottom: 2rem;
            border-radius: 8px;
            display: flex;
            align-items: center;
        }
        
        .warning-icon {
            color: var(--danger-color);
            font-size: 2rem;
            margin-left: 1rem;
        }
        
        .detail-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 1.5rem;
            border-left: 4px solid var(--danger-color);
        }
        
        .detail-label {
            font-weight: 600;
            color: var(--danger-dark);
            background-color: rgba(230, 57, 70, 0.1);
            padding: 0.75rem 1rem;
            border-radius: 5px 5px 0 0;
        }
        
        .detail-value {
            padding: 1rem;
            font-size: 1.1rem;
            color: var(--dark-text);
        }
        
        .action-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 2rem;
        }
        
        .btn-delete {
            background: linear-gradient(to right, var(--danger-color), var(--danger-dark));
            color: white;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }
        
        .btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(217, 4, 41, 0.3);
        }
        
        .btn-delete:active {
            transform: translateY(0);
        }
        
        .btn-delete::after {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            width: 5px;
            height: 5px;
            background: rgba(255, 255, 255, 0.5);
            opacity: 0;
            border-radius: 100%;
            transform: scale(1, 1) translate(-50%);
            transform-origin: 50% 50%;
        }
        
        .btn-delete:focus:not(:active)::after {
            animation: ripple 1s ease-out;
        }
        
        @@keyframes ripple {
            0% {
                transform: scale(0, 0);
                opacity: 0.5;
            }
            100% {
                transform: scale(20, 20);
                opacity: 0;
            }
        }
        
        .btn-cancel {
            background-color: white;
            color: var(--secondary-color);
            border: 2px solid var(--secondary-color);
            padding: 0.75rem 2rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
        }
        
        .btn-cancel:hover {
            background-color: var(--secondary-color);
            color: white;
        }
        
        .icon {
            margin-left: 8px;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="delete-container">
                    <div class="delete-header">
                        <h1 class="delete-title">حذف مركز التكلفة</h1>
                    </div>
                    
                    <div class="p-4 p-md-5">
                        <div class="warning-message">
                            <i class="fas fa-exclamation-triangle warning-icon"></i>
                            <h4 class="mb-0">هل أنت متأكد من رغبتك في حذف هذا المركز؟</h4>
                        </div>
                        
                        <div class="detail-card">
                            <div class="detail-label">
                              مركز التكلفه التابع
                            </div>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.CenterName)
                            </div>
                        </div>
                        
                        <div class="detail-card">
                            <div class="detail-label">
                               تاريخ الانشاء
                            </div>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.CreatedAt)
                            </div>
                        </div>
                        
                        <div class="detail-card">
                            <div class="detail-label">
                               الفرع التابع
                            </div>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.Branch.BranchName)
                            </div>
                        </div>
                        
                      @*   <div class="detail-card">
                            <div class="detail-label">
                                @Html.DisplayNameFor(model => model.User)
                            </div>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.User.Email)
                            </div>
                        </div> *@
                        
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="CostCenterId" />
                            <div class="action-buttons">
                                <a asp-action="Index" class="btn btn-cancel">
                                    <i class="fas fa-arrow-right icon"></i> إلغاء والعودة للقائمة
                                </a>
                                <button type="submit" class="btn btn-delete">
                                    <i class="fas fa-trash-alt icon"></i> تأكيد الحذف
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>