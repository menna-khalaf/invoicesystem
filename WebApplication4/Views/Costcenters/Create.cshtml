@model WebApplication4.Models.Costcenter

@{
    ViewData["Title"] = "إنشاء مركز تكلفة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #1e88e5;
            --dark-blue: #0d47a1;
            --light-blue: #bbdefb;
            --gradient-blue: linear-gradient(135deg, var(--primary-blue), var(--dark-blue));
        }
        
        body {
            font-family: 'Tajawal', sans-serif;
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }
        
        .main-container {
            display: flex;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.2);
            overflow: hidden;
            height: 100%;
            width: 80%;
            max-width: 1000px;
        }
        
        .form-section {
            padding: 2rem;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        
        .image-section {
            flex: 1;
            background-image: url('https://images.unsplash.com/photo-1450101499163-c8848c66ca85?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
            background-size: cover;
            background-position: center;
        }
        
        h1, h4 {
            color: var(--dark-blue);
            font-weight: 700;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
        }
        
        .form-control {
            border-radius: 8px;
            border: 1px solid var(--light-blue);
            padding: 0.75rem 1rem;
            margin-bottom: 1rem;
        }
        
        .form-control:focus {
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 0.25rem rgba(30, 136, 229, 0.25);
        }
        
        .btn-primary {
            background: var(--gradient-blue);
            border: none;
            border-radius: 8px;
            padding: 0.75rem 2rem;
            font-weight: 500;
            transition: all 0.3s ease;
            margin-top: 1rem;
            width: 100%;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        
        .btn-outline-primary {
            width: 100%;
            margin-top: 0.5rem;
        }
        
        .form-group label {
            font-weight: 500;
            color: var(--dark-blue);
            margin-bottom: 0.5rem;
        }
        
        .buttons-container {
            margin-top: 1.5rem;
        }
        
        .validation-summary-errors ul {
            list-style-type: none;
            padding-right: 0;
        }
        
        a {
            color: var(--primary-blue);
            text-decoration: none;
            transition: color 0.3s ease;
        }
        
        a:hover {
            color: var(--dark-blue);
            text-decoration: underline;
        }
        
        hr {
            border-top: 2px solid var(--light-blue);
            opacity: 1;
            margin: 1rem 0;
        }
        
       @@media (max-width: 992px) {
            .main-container {
                flex-direction: column;
                width: 90%;
            }
            
            .image-section {
                height: 200px;
                width: 100%;
            }
        }
        
        @@media (max-width: 768px) {
            .main-container {
                width: 95%;
            }
            
            .form-section {
                padding: 1.5rem;
            }
            
            h1 {
                font-size: 1.8rem;
            }
            
            h4 {
                font-size: 1.4rem;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="image-section"></div>
        
        <div class="form-section">
            <h1>إنشاء</h1>
            <h4>مركز تكلفة</h4>
            <hr />
            
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="CenterName" class="control-label">اسم المركز</label>
                    <input asp-for="CenterName" class="form-control" placeholder="أدخل اسم مركز التكلفة" />
                    <span asp-validation-for="CenterName" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="BranchId" class="control-label">الفرع</label>
                    <select asp-for="BranchId" class="form-control" asp-items="ViewBag.BranchId">
                        <option value="">-- اختر الفرع --</option>
                    </select>
                </div>
                
                <div class="buttons-container">
                    <input type="submit" value="إنشاء" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-primary">العودة للقائمة</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>