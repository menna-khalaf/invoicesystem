@model WebApplication4.Models.Costcenter

@{
    ViewData["Title"] = "تفاصيل مركز التكلفة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3a0ca3;
            --accent-color: #f72585;
            --light-bg: #f8f9fa;
            --dark-text: #212529;
        }

        body {
            font-family: 'Tajawal', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }

        .details-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .details-header {
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 1.5rem;
            text-align: center;
            margin-bottom: 2rem;
        }

        .details-title {
            font-weight: 700;
            margin: 0;
            font-size: 1.8rem;
        }

        .detail-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
            border-left: 4px solid var(--primary-color);
        }

            .detail-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            }

        .detail-label {
            font-weight: 600;
            color: var(--secondary-color);
            background-color: rgba(67, 97, 238, 0.1);
            padding: 0.5rem 1rem;
            border-radius: 5px 5px 0 0;
        }

        .detail-value {
            padding: 1rem;
            font-size: 1.1rem;
            color: var(--dark-text);
        }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 2rem;
        }

        .btn-edit {
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .btn-edit:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(58, 12, 163, 0.3);
            }

        .btn-back {
            background-color: white;
            color: var(--secondary-color);
            border: 2px solid var(--secondary-color);
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .btn-back:hover {
                background-color: var(--secondary-color);
                color: white;
            }

        .icon {
            margin-left: 8px;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="details-container">
                    <div class="details-header">
                        <h1 class="details-title">تفاصيل مركز التكلفة</h1>
                    </div>

                    <div class="p-4 p-md-5">
                        <div class="detail-card">
                            <div class="detail-label">
                               مركز التكلفه التابع
                            </div>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.CenterName)
                            </div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">
                               تاريخ الانشاء
                            </div>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.CreatedAt)
                            </div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">
                              الفرع التابع
                            </div>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.Branch.BranchName)
                            </div>
                        </div>

                        @* <div class="detail-card">
                            <div class="detail-label">
                                @Html.DisplayNameFor(model => model.User)
                            </div>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.User.Email)
                            </div>
                        </div> *@

                        <div class="action-buttons">
                            <a asp-action="Index" class="btn btn-back">
                                <i class="fas fa-arrow-right icon"></i> العودة إلى القائمة
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model?.CostCenterId" class="btn btn-edit">
                                <i class="fas fa-edit icon"></i> تعديل
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>