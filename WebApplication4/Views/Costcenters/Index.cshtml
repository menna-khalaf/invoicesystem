@model IEnumerable<WebApplication4.Models.Costcenter>

@{
    ViewData["Title"] = "مراكز التكلفة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #3498db;
            --secondary-color: #2c3e50;
            --accent-color: #e74c3c;
            --light-bg: #f8f9fa;
            --dark-text: #2c3e50;
            --light-text: #ecf0f1;
        }

        body {
            font-family: 'Tajawal', sans-serif;
            background-color: var(--light-bg);
            color: var(--dark-text);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            width: 100vw;
            overflow-x: hidden;
        }

        .wrapper {
            width: 100%;
            min-height: 100vh;
            padding: 20px;
            box-sizing: border-box;
        }

        .main-container {
            width: 100%;
            max-width: 100%;
            margin: 0 auto;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
            padding: 20px;
            box-sizing: border-box;
            overflow: hidden;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #eee;
            flex-wrap: wrap;
            gap: 15px;
            width: 100%;
        }

        .page-title {
            color: var(--secondary-color);
            font-weight: 700;
            margin: 0;
            font-size: clamp(1.3rem, 4vw, 1.8rem);
            white-space: nowrap;
        }

            .page-title i {
                color: var(--primary-color);
                margin-left: 10px;
            }

        .btn-create {
            background-color: var(--primary-color);
            color: white;
            font-weight: 500;
            padding: 8px 20px;
            border-radius: 8px;
            transition: all 0.3s ease;
            border: none;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            white-space: nowrap;
            font-size: clamp(0.8rem, 3vw, 1rem);
        }

            .btn-create:hover {
                background-color: #2980b9;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(52, 152, 219, 0.3);
                color: white;
            }

            .btn-create i {
                margin-left: 8px;
            }

        .table-container {
            width: 100%;
            max-width: 100%;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }


        .table {
            width: 100%;
            min-width: 100%;
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
            table-layout: auto; /* يمكن تغييره إلى fixed إذا أردت أن تكون الأعمدة متساوية */
        }


            .table thead th {
                background-color: var(--secondary-color);
                color: white;
                font-weight: 600;
                padding: 15px;
                border: none;
                text-align: center;
                position: sticky;
                top: 0;
                font-size: clamp(0.8rem, 2vw, 1rem);
            }

            .table tbody tr {
                transition: all 0.2s ease;
            }

                .table tbody tr:hover {
                    background-color: rgba(52, 152, 219, 0.05);
                }

            .table tbody td {
                padding: 12px 15px;
                vertical-align: middle;
                border-top: 1px solid #eee;
                text-align: center;
                font-size: clamp(0.8rem, 2vw, 1rem);
            }

        .action-buttons {
            display: flex;
            gap: 8px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-action {
            padding: 5px 12px;
            border-radius: 6px;
            font-size: clamp(0.7rem, 2vw, 0.85rem);
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            white-space: nowrap;
        }

        .btn-edit {
            background-color: rgba(52, 152, 219, 0.1);
            color: var(--primary-color);
            border: 1px solid var(--primary-color);
        }

            .btn-edit:hover {
                background-color: var(--primary-color);
                color: white;
            }

        .btn-details {
            background-color: rgba(46, 204, 113, 0.1);
            color: #2ecc71;
            border: 1px solid #2ecc71;
        }

            .btn-details:hover {
                background-color: #2ecc71;
                color: white;
            }

        .btn-delete {
            background-color: rgba(231, 76, 60, 0.1);
            color: var(--accent-color);
            border: 1px solid var(--accent-color);
        }

            .btn-delete:hover {
                background-color: var(--accent-color);
                color: white;
            }

        .empty-state {
            text-align: center;
            padding: 40px 0;
            color: #7f8c8d;
            width: 100%;
        }

            .empty-state i {
                font-size: clamp(2rem, 10vw, 3rem);
                color: #bdc3c7;
                margin-bottom: 15px;
            }

            .empty-state h5 {
                font-size: clamp(1rem, 4vw, 1.5rem);
            }

            .empty-state p {
                font-size: clamp(0.8rem, 3vw, 1rem);
            }

        .bi {
            margin-left: 5px;
        }

        @@media (max-width: 768px) {
            .wrapper {
                padding: 10px;
            }

            .main-container {
                padding: 15px;
                border-radius: 10px;
            }

            .page-header {
                flex-direction: row;
                justify-content: space-between;
            }

            .action-buttons {
                flex-direction: row;
                gap: 5px;
            }

            .btn-action {
                padding: 5px 8px;
            }
        }

        @@media (max-width: 576px) {
            .page-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .table thead {
                display: none;
            }

            .table tbody tr {
                display: block;
                margin-bottom: 15px;
                border: 1px solid #eee;
                border-radius: 8px;
                padding: 10px;
            }

            .table tbody td {
                display: block;
                text-align: right;
                border: none;
                padding: 8px;
                position: relative;
                padding-right: 50%;
            }

                .table tbody td::before {
                    content: attr(data-label);
                    position: absolute;
                    right: 10px;
                    top: 8px;
                    font-weight: bold;
                    color: var(--secondary-color);
                }

                .table tbody td:last-child {
                    padding-right: 15px;
                    text-align: center;
                }

                    .table tbody td:last-child::before {
                        display: none;
                    }

            .action-buttons {
                justify-content: flex-start;
            }
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="main-container">
            <div class="page-header">
                <h1 class="page-title"><i class="bi bi-building"></i> مراكز التكلفة</h1>
                <a asp-action="Create" class="btn-create">
                    <i class="bi bi-plus-circle"></i> إنشاء جديد
                </a>
            </div>

            <div class="table-container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>مركز التكلفه</th>
                            <th>تاريخ الانشاء</th>
                            <th>الفرع التابع</th>
                            <th>المستخدم</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td data-label="اسم المركز">@Html.DisplayFor(modelItem => item.CenterName)</td>
                                    <td data-label="تاريخ الإنشاء">@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                    <td data-label="الفرع">@Html.DisplayFor(modelItem => item.Branch.BranchName)</td>
                                    <td data-label="المستخدم">@Html.DisplayFor(modelItem => item.User.Email)</td>
                                    <td>
                                        <div class="action-buttons">
                                            <a asp-action="Edit" asp-route-id="@item.CostCenterId" class="btn-action btn-edit">
                                                <i class="bi bi-pencil-square"></i> تعديل
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.CostCenterId" class="btn-action btn-details">
                                                <i class="bi bi-eye"></i> تفاصيل
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.CostCenterId" class="btn-action btn-delete">
                                                <i class="bi bi-trash"></i> حذف
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="empty-state">
                                    <i class="bi bi-building"></i>
                                    <h5>لا توجد مراكز تكلفة مسجلة</h5>
                                    <p>اضغط على زر "إنشاء جديد" لإضافة مركز تكلفة</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Make sure the table container takes full width on mobile
        document.addEventListener('DOMContentLoaded', function () {
            function adjustTableContainer() {
                const tableContainer = document.querySelector('.table-container');
                if (window.innerWidth < 576) {
                    tableContainer.style.overflowX = 'visible';
                } else {
                    tableContainer.style.overflowX = 'auto';
                }
            }

            window.addEventListener('resize', adjustTableContainer);
            adjustTableContainer();
        });
    </script>
</body>
</html>