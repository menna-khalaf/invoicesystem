@model WebApplication4.Models.ParentAccount
@{
    var accountTypes = ViewBag.AccountTypes as List<AccountType>;
    var selectedAccountTypeId = ViewBag.SelectedAccountTypeId as int?;
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>إضافة حساب رئيسي</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary-color: #2c5e8a;
            --secondary-color: #f0b55a;
            --accent-color: #8a4f2c;
            --light-bg: #f8f5f0;
        }

        body {
            font-family: 'Tajawal', sans-serif;
            background-color: var(--light-bg);
            padding: 0;
            margin: 0;
            background-image: url('https://www.transparenttextures.com/patterns/arabesque.png');
        }

        .main-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .form-container {
            max-width: 650px;
            width: 100%;
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
            border: 1px solid #e0d6c8;
        }

            .form-container::before {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 8px;
                height: 100%;
                background: linear-gradient(to bottom, var(--primary-color), var(--secondary-color));
            }

        .form-header {
            text-align: center;
            margin-bottom: 30px;
            position: relative;
        }

            .form-header h2 {
                color: var(--primary-color);
                font-weight: 700;
                margin-bottom: 10px;
                position: relative;
                display: inline-block;
            }

                .form-header h2::after {
                    content: '';
                    position: absolute;
                    bottom: -10px;
                    right: 0;
                    width: 50%;
                    height: 3px;
                    background: var(--secondary-color);
                    border-radius: 3px;
                }

            .form-header i {
                color: var(--secondary-color);
                font-size: 1.8rem;
                margin-left: 10px;
            }

        .form-label {
            font-weight: 500;
            color: var(--primary-color);
            margin-bottom: 8px;
        }

        .form-control, .form-select {
            border: 1px solid #d1c7b7;
            border-radius: 8px;
            padding: 12px 15px;
            background-color: #fffdfa;
            transition: all 0.3s;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--secondary-color);
                box-shadow: 0 0 0 0.25rem rgba(240, 181, 90, 0.25);
                background-color: white;
            }

        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
            width: 100%;
            margin-top: 10px;
        }

            .btn-primary:hover {
                background-color: #1d4568;
                transform: translateY(-2px);
            }

        .btn-secondary {
            background-color: white;
            color: var(--primary-color);
            border: 1px solid var(--primary-color);
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
            width: 100%;
        }

            .btn-secondary:hover {
                background-color: #f5f5f5;
                color: var(--primary-color);
                transform: translateY(-2px);
            }

        .input-group-text {
            background-color: var(--secondary-color);
            color: white;
            border: none;
            border-radius: 8px 0 0 8px !important;
        }

        .text-danger {
            color: #d9534f !important;
            font-size: 0.85rem;
        }

        .form-decoration {
            position: absolute;
            opacity: 0.1;
            z-index: 0;
        }

        .decoration-1 {
            top: -50px;
            left: -50px;
            font-size: 150px;
            color: var(--primary-color);
        }

        .decoration-2 {
            bottom: -30px;
            right: -30px;
            font-size: 120px;
            color: var(--secondary-color);
        }

        @@media (max-width: 768px) {
            .form-container {
                padding: 20px;
            }

            .form-header h2 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="form-header">
            <h2><i class="fas fa-layer-group"></i> إضافة حساب رئيسي</h2>
        </div>
        
        <form asp-action="AddParentAccount" method="post">
            <div class="mb-3 input-icon">
                <label asp-for="Name" class="form-label">اسم الحساب</label>
                <i class="fas fa-signature"></i>
                <input asp-for="Name" class="form-control" required placeholder="أدخل اسم الحساب الرئيسي" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="mb-3 input-icon">
                <label asp-for="AccountTypeId" class="form-label">نوع الحساب</label>
                <i class="fas fa-tag"></i>
                <select asp-for="AccountTypeId" asp-items="@(new SelectList(accountTypes, "Id", "Name", selectedAccountTypeId))" class="form-select" required>
                    <option value="">اختر نوع الحساب</option>
                </select>
                <span asp-validation-for="AccountTypeId" class="text-danger"></span>
            </div>
            
            <div class="btn-container">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> إضافة
                </button>
                <a asp-action="GetAccountHierarchy" class="btn btn-secondary">
                    <i class="fas fa-arrow-right me-1"></i> رجوع
                </a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>