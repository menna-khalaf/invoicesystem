@model WebApplication4.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h1 class="text-center text-danger">Delete User</h1>

<h3 class="text-center">Are you sure you want to delete this user?</h3>

<div class="card shadow-lg p-4 my-4">
    <h4 class="text-primary">User Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Username)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Role)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SubscriptionPlan)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.SubscriptionPlan)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SubscriptionStartDate)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.SubscriptionStartDate)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SubscriptionEndDate)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.SubscriptionEndDate)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AutoRenewal)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.AutoRenewal)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PaymentStatus)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.PaymentStatus)</dd>
    </dl>
</div>

<div class="text-center">
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger px-4">
            <i class="fas fa-trash-alt"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </form>
</div>

<style>
    .card {
        max-width: 600px;
        margin: auto;
        border-radius: 10px;
    }
</style>
