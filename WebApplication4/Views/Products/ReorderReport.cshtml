@model List<WebApplication4.Models.Product>

@{
    ViewData["Title"] = "تقرير إعادة الشراء";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #207cd4;
            --primary-dark: #1a6ab7;
            --primary-light: #e6f0fa;
            --danger-color: #ff4757;
            --warning-color: #ffa502;
            --success-color: #2ed573;
            --text-color: #2f3542;
            --light-gray: #f1f2f6;
            --border-radius: 12px;
            --box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
        }

        body {
            font-family: 'Tajawal', sans-serif;
            background-color: #f8f9fa;
            color: var(--text-color);
            line-height: 1.6;
        }

        .report-container {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            overflow: hidden;
            margin: 2rem auto;
            max-width: 1200px;
            transition: transform 0.3s ease;
        }

            .report-container:hover {
                transform: translateY(-5px);
            }

        .report-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            padding: 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .report-header::before {
                content: "";
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, rgba(255,255,255,0) 70%);
                transform: rotate(30deg);
            }

        .report-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            position: relative;
        }

        .report-subtitle {
            font-size: 1rem;
            opacity: 0.9;
            margin-bottom: 0;
        }

        .report-meta {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-top: 1rem;
            flex-wrap: wrap;
        }

        .meta-item {
            background: rgba(255, 255, 255, 0.15);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
        }

        .table-container {
            padding: 1.5rem;
        }

        .table-responsive {
            border-radius: var(--border-radius);
            overflow: hidden;
        }

        .table {
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
        }

            .table thead th {
                background-color: var(--primary-light);
                color: var(--primary-dark);
                font-weight: 600;
                padding: 1rem;
                border-bottom: 2px solid var(--primary-light);
                text-align: right;
            }

            .table tbody tr {
                transition: all 0.2s ease;
            }

                .table tbody tr:hover {
                    background-color: rgba(32, 124, 212, 0.05);
                }

            .table td {
                padding: 1rem;
                vertical-align: middle;
                border-bottom: 1px solid var(--light-gray);
            }

        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.35rem 0.8rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .status-low {
            background-color: rgba(255, 71, 87, 0.1);
            color: var(--danger-color);
        }

        .status-ok {
            background-color: rgba(255, 165, 2, 0.1);
            color: var(--warning-color);
        }

        .status-good {
            background-color: rgba(46, 213, 115, 0.1);
            color: var(--success-color);
        }

        .status-indicator {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-left: 6px;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .btn {
            border: none;
            border-radius: 50px;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: white;
        }

            .btn-primary:hover {
                background-color: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(32, 124, 212, 0.2);
            }

        .btn-outline-secondary {
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            background: white;
        }

            .btn-outline-secondary:hover {
                background-color: var(--primary-light);
            }

        .summary-cards {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
            flex-wrap: wrap;
        }

        .summary-card {
            flex: 1;
            min-width: 200px;
            background: white;
            border-radius: var(--border-radius);
            padding: 1.5rem;
            box-shadow: var(--box-shadow);
            text-align: center;
            transition: transform 0.3s ease;
        }

            .summary-card:hover {
                transform: translateY(-5px);
            }

            .summary-card.warning {
                border-top: 4px solid var(--warning-color);
            }

            .summary-card.danger {
                border-top: 4px solid var(--danger-color);
            }

            .summary-card.success {
                border-top: 4px solid var(--success-color);
            }

        .summary-value {
            font-size: 1.8rem;
            font-weight: 700;
            margin: 0.5rem 0;
        }

        .summary-label {
            font-size: 0.9rem;
            color: #6c757d;
        }

        @@media (max-width: 768px) {
            .report-title {
                font-size: 1.5rem;
            }

            .report-subtitle {
                font-size: 0.9rem;
            }

            .table thead {
                display: none;
            }

            .table, .table tbody, .table tr, .table td {
                display: block;
                width: 100%;
            }

                .table tr {
                    margin-bottom: 1rem;
                    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
                    border-radius: var(--border-radius);
                }

                .table td {
                    text-align: left;
                    padding-right: 50%;
                    position: relative;
                    border-bottom: 1px solid var(--light-gray);
                }

                    .table td::before {
                        content: attr(data-label);
                        position: absolute;
                        right: 15px;
                        width: 45%;
                        padding-left: 15px;
                        font-weight: 600;
                        color: var(--primary-dark);
                    }

                    .table td:last-child {
                        border-bottom: none;
                    }

            .summary-cards {
                flex-direction: column;
            }
        }

        /* Print styles */
        @@media print {
            body {
                background: none;
                padding: 0;
            }

            .report-container {
                box-shadow: none;
                border-radius: 0;
                margin: 0;
            }

            .action-buttons {
                display: none;
            }

            .table thead th {
                background-color: #f1f1f1 !important;
                color: #000 !important;
            }
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <div class="report-container">
            <!-- Report Header -->
            <div class="report-header">
                <h1 class="report-title">
                    <i class="fas fa-shopping-cart"></i> تقرير إعادة الشراء
                </h1>
                <p class="report-subtitle">تحليل مخزون المنتجات وحدود إعادة الطلب</p>
                <div class="report-meta">
                    <div class="meta-item">
                        <i class="fas fa-calendar-alt"></i> تاريخ التقرير: @DateTime.Now.ToString("yyyy/MM/dd")
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-boxes"></i> عدد المنتجات: @Model.Count
                    </div>
                </div>
            </div>

            <!-- Summary Cards -->
            <div class="summary-cards px-3 pt-3">
                <div class="summary-card danger">
                    <div class="summary-value text-danger">
                        @Model.Count(p => p.Balance <= p.RepurchasePoint)
                    </div>
                    <div class="summary-label">منتجات تحتاج إعادة شراء عاجلة</div>
                </div>
                <div class="summary-card warning">
                    <div class="summary-value text-warning">
                        @Model.Count(p => p.Balance > p.RepurchasePoint && p.Balance <= p.RepurchasePoint * 1.5)
                    </div>
                    <div class="summary-label">منتجات قريبة من الحد الأدنى</div>
                </div>
                <div class="summary-card success">
                    <div class="summary-value text-success">
                        @Model.Count(p => p.Balance > p.RepurchasePoint * 1.5)
                    </div>
                    <div class="summary-label">منتجات بمستوى جيد</div>
                </div>
            </div>

            <!-- Report Table -->
            <div class="table-container">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>اسم المنتج</th>
                                <th>الرصيد الحالي</th>
                                <th>نقطة إعادة الشراء</th>
                                <th>الحالة</th>
                              @*   <th>النسبة المتبقية</th> *@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                var statusClass = product.Balance <= product.RepurchasePoint ? "status-low" :
                                (product.Balance <= product.RepurchasePoint * 1.5 ? "status-ok" : "status-good");
                                var statusText = product.Balance <= product.RepurchasePoint ? "تحذير" :
                                (product.Balance <= product.RepurchasePoint * 1.5 ? "متوسط" : "جيد");
                                var percentage = (product.Balance / product.RepurchasePoint) * 100;

                                <tr>
                                    <td data-label="اسم المنتج">
                                        <strong>@product.ProductName</strong>
                                    </td>
                                    <td data-label="الرصيد الحالي">@product.Balance</td>
                                    <td data-label="نقطة إعادة الشراء">@product.RepurchasePoint</td>
                                    <td data-label="الحالة">
                                        <span class="status-badge @statusClass">
                                            @statusText
                                            <span class="status-indicator"></span>
                                        </span>
                                    </td>
                                    <td data-label="النسبة المتبقية">
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar
                                                 @(statusClass == "status-low" ? "bg-danger" :
                                                   statusClass == "status-ok" ? "bg-warning" : "bg-success")"
                                                 role="progressbar"
                                                 style="width: @Math.Min(100, percentage)%"
                                                 aria-valuenow="@percentage"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100">
                                            </div>
                                        </div>
                                        @* <small>@Math.Min(100, Math.Round(percentage))%</small> *@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Action Buttons -->
                <div class="action-buttons">
                    <button onclick="window.print()" class="btn btn-primary">
                        <i class="fas fa-print"></i> طباعة التقرير
                    </button>
                   @*  <a href="#" class="btn btn-outline-secondary">
                        <i class="fas fa-file-export"></i> تصدير إلى Excel
                    </a> *@
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Add animation to table rows
        document.querySelectorAll('tbody tr').forEach((row, index) => {
            row.style.animationDelay = `${index * 0.05}s`;
        });
    </script>
</body>
</html>