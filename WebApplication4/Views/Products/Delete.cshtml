@model WebApplication4.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            font-family: 'Tajawal', sans-serif;
            background-color: #f8f9fa;
            padding-top: 40px;
        }

        .delete-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
            max-width: 800px;
            margin: 0 auto;
        }

        .header {
            color: #dc3545;
            border-bottom: 2px solid #dc3545;
            padding-bottom: 10px;
            margin-bottom: 25px;
            text-align: center;
        }

        .product-image {
            max-width: 150px;
            max-height: 150px;
            border-radius: 5px;
            border: 1px solid #dee2e6;
        }

        .qr-image {
            max-width: 100px;
            max-height: 100px;
        }

        .detail-row {
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid #eee;
        }

        .btn-delete {
            background-color: #dc3545;
            border-color: #dc3545;
            padding: 8px 25px;
        }

        .btn-back {
            color: #6c757d;
            border-color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="delete-container">
            <h1 class="header">
                <i class="fas fa-trash-alt"></i> @ViewData["Title"]
            </h1>

            <h4 class="text-center text-danger mb-4">هل أنت متأكد من رغبتك في حذف هذا المنتج؟</h4>

            <div class="product-details">
                <div class="detail-row row">
                    <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.ProductName)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>
                </div>

                <div class="detail-row row">
                    <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Price)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Price) ر.س</dd>
                </div>

                <div class="detail-row row">
                    <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>
                </div>

                <div class="detail-row row">
                    <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Vatrate)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Vatrate)%</dd>
                </div>

                <div class="detail-row row">
                    <dt class="col-sm-4 text-muted">صورة المنتج</dt>
                    <dd class="col-sm-8">
                        @if (Model.Image != null && Model.Image.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)"
                                 class="product-image" alt="صورة المنتج" />
                        }
                        else
                        {
                            <span class="text-muted">لا توجد صورة</span>
                        }
                    </dd>
                </div>

              
            </div>

            <form asp-action="Delete" class="mt-4 text-center">
                <input type="hidden" asp-for="ProductId" />
                <button type="submit" class="btn btn-danger btn-delete">
                    <i class="fas fa-trash-alt"></i> تأكيد الحذف
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-back mx-2">
                    <i class="fas fa-arrow-right"></i> العودة للقائمة
                </a>
            </form>
        </div>
    </div>
</body>
</html>