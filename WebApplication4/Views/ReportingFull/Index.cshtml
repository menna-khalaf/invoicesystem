        flex-wrap: wrap;
        justify-content: space-between;
        margin: 0 -15px;
    }

    .card-col {
        flex: 0 0 calc(33.333% - 30px);
        margin: 0 15px 30px;
        min-width: 320px;
    }

    .card {
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        background: var(--card-bg);
        color: #252422;
        position: relative;
        border: none;
        height: 100%;
        transition: all 0.3s ease;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        text-align: center; /* Center all text in the card */
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
        background: var(--card-hover-bg);
    }

    .card-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        padding: 15px 20px;
        border-bottom: none;
        border-radius: 12px 12px 0 0 !important;
        text-align: center; /* Center header text */
    }

    .card-title {
        font-weight: 700;
        font-size: 1.4rem;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center; /* Center title content */
        flex-direction: row-reverse;
    }

    .card-title i {
        font-size: 1.8rem;
        margin-left: 10px;
    }

    .card-body {
        padding: 20px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        text-align: center; /* Center body text */
    }

    .card-description {
        font-size: 0.95rem;
        color: #506568;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px dashed #ddd;
    }

    .list-group {
        padding: 0;
        list-style: none;
        margin: 0;
        text-align: center; /* Center list items */
    }

    .list-group-item {
        padding: 12px 15px;
        margin-bottom: 8px;
        border-radius: 6px;
        background-color: rgba(255, 255, 255, 0.7);
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.2s ease;
        position: relative;
        overflow: hidden;
        text-align: center; /* Center item text */
        display: inline-block; /* Make items fit content when centered */
        width: 90%; /* Give some width for better appearance */
    }

    .list-group-item:before {
        content: "";
        position: absolute;
        right: auto;
        left: -10px;
        top: 50%;
        transform: translateY(-50%);
        width: 5px;
        height: 0;
        background-color: var(--primary-color);
        transition: all 0.3s ease;
        border-radius: 0 5px 5px 0;
    }

