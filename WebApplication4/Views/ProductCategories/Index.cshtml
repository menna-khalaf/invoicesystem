@model IEnumerable<WebApplication4.Models.ProductCategory>

@{
    ViewData["Title"] = "قائمة فئات المنتجات";
}

<style>
    /* Arabic font and RTL base styling */
    @@import url('https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700;900&display=swap');

    :root {
        --primary-color: #4361ee;
        --secondary-color: #3f37c9;
        --accent-color: #4cc9f0;
        --dark-color: #2b2d42;
        --light-color: #f8f9fa;
        --success-color: #4ad66d;
        --warning-color: #f8961e;
        --danger-color: #ef233c;
        --table-header-bg: #f8f9fa;
        --table-border: #e9ecef;
        --table-hover: #f1f3ff;
    }

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: 'Tajawal', sans-serif;
        background-color: #f5f7fa;
        direction: rtl;
        color: var(--dark-color);
        padding: 20px;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.05);
    }

    /* Header styling */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid var(--table-border);
    }

        .page-header h1 {
            color: var(--dark-color);
            font-size: 1.8rem;
            font-weight: 700;
            margin: 0;
        }

    /* Create button styling */
    .btn-create {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(67, 97, 238, 0.2);
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(67, 97, 238, 0.3);
            color: white;
        }

        .btn-create i {
            margin-left: 8px;
        }

    /* Table styling */
    .categories-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-bottom: 30px;
        overflow: hidden;
        border-radius: 12px;
        box-shadow: 0 0 0 1px var(--table-border);
    }

        .categories-table thead {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
        }

        .categories-table th {
            padding: 15px;
            text-align: right;
            font-weight: 700;
            position: relative;
        }

            .categories-table th:not(:last-child)::after {
                content: "";
                position: absolute;
                right: 0;
                top: 50%;
                transform: translateY(-50%);
                height: 60%;
                width: 1px;
                background: rgba(255, 255, 255, 0.3);
            }

        .categories-table td {
            padding: 15px;
            border-bottom: 1px solid var(--table-border);
            vertical-align: middle;
        }

        .categories-table tbody tr:last-child td {
            border-bottom: none;
        }

        .categories-table tbody tr:hover {
            background-color: var(--table-hover);
        }

    /* Icon image styling */
    .category-icon {
        width: 60px;
        height: 60px;
        object-fit: contain;
        border-radius: 8px;
        border: 1px solid var(--table-border);
        background: white;
        padding: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    /* Actions styling */
    .action-link {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 600;
        padding: 5px 10px;
        border-radius: 5px;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
    }

        .action-link:hover {
            background-color: rgba(67, 97, 238, 0.1);
            color: var(--secondary-color);
        }

        .action-link i {
            margin-left: 5px;
            font-size: 0.9rem;
        }

    /* No icon text */
    .no-icon {
        color: #6c757d;
        font-style: italic;
    }

    /* Back link styling */
    .back-link {
        display: inline-block;
        margin-top: 20px;
        color: var(--dark-color);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
    }

        .back-link:hover {
            color: var(--primary-color);
        }

        .back-link i {
            margin-right: 5px;
        }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
        }

            .page-header h1 {
                margin-bottom: 15px;
            }

        .categories-table {
            display: block;
            overflow-x: auto;
        }

        .category-icon {
            width: 50px;
            height: 50px;
        }
    }
</style>

<div class="container">
    <div class="page-header">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn-create">
            <i class="bi bi-plus-circle"></i> إنشاء فئة جديدة
        </a>
    </div>

    <div class="table-responsive">
        <table class="categories-table">
            <thead>
                <tr>
                    <th>اسم الفئة</th>
                    <th>أيقونة</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                        <td>
                            @if (item.Icon != null && item.Icon.Length > 0)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Icon)"
                                     alt="Category Icon"
                                     class="category-icon" />
                            }
                            else
                            {
                                <span class="no-icon">لا يوجد أيقونة</span>
                            }
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a asp-action="Index" class="back-link">
        <i class="bi bi-arrow-left"></i> العودة إلى القائمة
    </a>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}