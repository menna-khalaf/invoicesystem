@model WebApplication4.Models.Employee

@{
    ViewData["Title"] = "حذف الموظف";
}

<div class="container mt-4" style="direction: rtl; text-align: right; max-width: 600px;">
    <div class="card shadow-lg p-4">
        <h3 class="text-center text-danger">
            <i class="bi bi-trash"></i> حذف الموظف
        </h3>
        <hr style="border-top: 3px solid red;" />

        <h5 class="text-center fw-bold text-danger">هل أنت متأكد أنك تريد حذف هذا الموظف؟</h5>

        <dl class="row">
            <div class="d-flex justify-content-between py-2 border-bottom">
                <dt class="fw-bold text-secondary">
                    <i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.FullName)
                </dt>
                <dd class="text-end mb-0">@Html.DisplayFor(model => model.FullName)</dd>
            </div>

            <div class="d-flex justify-content-between py-2 border-bottom">
                <dt class="fw-bold text-secondary">
                    <i class="bi bi-briefcase"></i> @Html.DisplayNameFor(model => model.Position)
                </dt>
                <dd class="text-end mb-0">@Html.DisplayFor(model => model.Position)</dd>
            </div>

            <div class="d-flex justify-content-between py-2 border-bottom">
                <dt class="fw-bold text-secondary">
                    <i class="bi bi-cash-coin"></i> @Html.DisplayNameFor(model => model.Salary)
                </dt>
                <dd class="text-end mb-0">@Html.DisplayFor(model => model.Salary) جنيه</dd>
            </div>

            <div class="d-flex justify-content-between py-2 border-bottom">
                <dt class="fw-bold text-secondary">
                    <i class="bi bi-calendar-check"></i> @Html.DisplayNameFor(model => model.HireDate)
                </dt>
                <dd class="text-end mb-0">@Html.DisplayFor(model => model.HireDate)</dd>
            </div>

            <div class="d-flex justify-content-between py-2 border-bottom">
                <dt class="fw-bold text-secondary">
                    <i class="bi bi-clock"></i> @Html.DisplayNameFor(model => model.AttendanceTime)
                </dt>
                <dd class="text-end mb-0">@Html.DisplayFor(model => model.AttendanceTime)</dd>
            </div>

            <div class="d-flex justify-content-between py-2 border-bottom">
                <dt class="fw-bold text-secondary">
                    <i class="bi bi-door-open"></i> @Html.DisplayNameFor(model => model.DepartureTime)
                </dt>
                <dd class="text-end mb-0">@Html.DisplayFor(model => model.DepartureTime)</dd>
            </div>

            <div class="d-flex justify-content-between py-2">
                <dt class="fw-bold text-secondary">
                    <i class="bi bi-envelope"></i> البريد الإلكتروني
                </dt>
                <dd class="text-end mb-0">@Html.DisplayFor(model => model.User.Email)</dd>
            </div>
        </dl>

        <div class="text-center">
            <button type="button" class="btn btn-danger fw-bold px-4" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                <i class="bi bi-trash"></i> حذف الموظف
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-arrow-left"></i> العودة للقائمة
            </a>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="confirmDeleteModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> تأكيد الحذف
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p class="fw-bold">هل أنت متأكد أنك تريد حذف هذا الموظف نهائيًا؟</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="EmployeeId" />
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash"></i> نعم، احذف
                    </button>
                </form>
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">إلغاء</button>
            </div>
        </div>
    </div>
</div>
