    <style>
        /* Keyframe animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInRight {
            from {
                opacity: 0;
                transform: translateX(30px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes float {
            0% {
                transform: translateY(0) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(5deg);
            }

            100% {
                transform: translateY(0) rotate(0deg);
            }
        }

        @@keyframes pulse {
            0% {
                transform: scale(0.8);
                opacity: 0.3;
            }

            50% {
                transform: scale(1.2);
                opacity: 0.1;
            }

            100% {
                transform: scale(0.8);
                opacity: 0.3;
            }
        }

        /* Hover effects */
        .primary-btn:hover, .secondary-btn:hover {
            transform: translateY(-5px) !important;
        }

        .primary-btn:hover {
            box-shadow: 0 10px 30px rgba(52, 152, 219, 0.4) !important;
        }

        .secondary-btn:hover {
            box-shadow: 0 10px 30px rgba(46, 204, 113, 0.2) !important;
            background: #f8f9fa !important;
        }

            .primary-btn:hover span, .secondary-btn:hover span {
                width: 100% !important;
            }

        .image-wrapper:hover img {
            transform: perspective(1000px) rotateY(0deg) !important;
            box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.15) !important;
        }

        .feature-item:hover {
            transform: translateY(-3px) !important;
            box-shadow: 0 8px 25px rgba(0,0,0,0.08) !important;
            background: white !important;
        }

        /* Responsive adjustments */
        @@media (max-width: 991px) {
            .hero-text-content, .hero-image-container {
                flex: 0 0 100% !important;
                max-width: 100% !important;
                text-align: center !important;
            }

            .cta-buttons, .features-list {
                justify-content: center !important;
            }

            .hero-heading {
                font-size: 2.2rem !important;
            }

            .tagline {
                text-align: center !important;
            }
        }

        @@media (max-width: 576px) {
            .hero-heading {
                font-size: 1.8rem !important;
            }

            .primary-btn, .secondary-btn {
                padding: 12px 25px !important;
                font-size: 0.9rem !important;
            }

            .feature-item {
                padding: 8px 15px !important;
            }
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Add animation classes for staggered animations
            const elements = [
                { selector: '.tagline', delay: 0 },
                { selector: '.hero-heading', delay: 0.2 },
                { selector: '.hero-description', delay: 0.4 },
                { selector: '.cta-buttons', delay: 0.6 },
                { selector: '.features-list', delay: 0.8 },
                { selector: '.image-wrapper img', delay: 0.3 }
            ];

            elements.forEach(item => {
                const el = document.querySelector(item.selector);
                if (el) {
                    el.style.opacity = '0';
                    el.style.animation = `fadeInUp 0.8s ease-out ${item.delay}s forwards`;
                }
            });
        });
    </script>
